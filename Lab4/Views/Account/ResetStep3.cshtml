@model Lab4.Models.User.ResetPassword.ResetStep3Model
@{
    ViewBag.Title = "Reset password";
}
<h2>Reset password</h2>

<form asp-controller="Account" asp-action="ResetStep3" asp-antiforgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>

    <!-- Password -->
    <div class="form-group">
        <label asp-for="Password" class="font-weight-bold"></label>
        <input asp-for="Password" class="form-control" />
        
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="font-weight-bold"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
    </div>

    <span asp-validation-for="Password"></span>

    <div class="form-group">
        <input type="submit" value="Change" class="btn btn-outline-secondary btn-sm" />
    </div>
</form>